<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.ywsh.vm.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animation"
            android:onClick="@{viewModel::goActivity}"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tv_AIDL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AIDL"
            android:onClick="@{viewModel.goActivity}"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tv_Handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handler"
            android:onClick="@{viewModel.goActivity}"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tv_ThreadPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ThreadPool"
            android:onClick="@{viewModel.goActivity}"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tv_MVVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MVVM"
            android:onClick="@{viewModel.goActivity}"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tv_Widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widget"
            android:onClick="@{viewModel.goActivity}"
            android:textAllCaps="false" />


    </LinearLayout>

</layout>
